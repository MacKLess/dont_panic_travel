<h1>Current Trip Packages:</h1>

<% if @trips.any? %>
  <h2>Try one of these <strong>exotic</strong> locations!</h2>
  <ul>
    <% @trips.each do |trip| %>
      <li><%= link_to trip["location"], trip_path(trip["id"]) %>, <%= trip["planet"] %></li>
    <% end %>
  </ul>
<% else %>
  <h3>There are no trips at this time!</h3>
<% end %>
